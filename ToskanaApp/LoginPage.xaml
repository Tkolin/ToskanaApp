<Page x:Class="ToskanaApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ToskanaApp"
      mc:Ignorable="d" 
       d:DesignHeight="700" d:DesignWidth="1000"
      Title="LoginPage">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="245">
        <Label Content="Авторизация" FontSize="24" FontWeight="DemiBold" Margin="5" HorizontalAlignment="Center"/>

        <TextBlock Margin="5,0,0,0">Логин:</TextBlock>
        <TextBox Margin="0,0,0,15" x:Name="tBoxLogin"></TextBox>
        <TextBlock Margin="5,0,0,0">Пароль:</TextBlock>
        <TextBox Margin="0,0,0,15" x:Name="tBoxPass"></TextBox>
        <Button Width ="120" Margin="5" x:Name="btnAuth" Click="btnAuth_Click">Вход</Button>

        <Button Width ="120" Margin="5" x:Name="btnExit" Click="btnExit_Click">Выход</Button>
    </StackPanel>
</Page>
